@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="login-card">
    <h2>Bienvenido</h2>
    <p class="subtitle">Ingresa tus credenciales para continuar</p>

    @if (TempData["Success"] is string successMsg)
    {
        <div class="alert alert-success" style="background: #dcfce7; color: #166534; border-radius: 12px; padding: 1rem; margin-bottom: 1.5rem;">
            ✅ @successMsg
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input name="email" type="email" class="form-control" placeholder="tu@email.com" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Contraseña</label>
            <input name="password" type="password" class="form-control" placeholder="••••••••" required />
        </div>
        <button type="submit" class="btn btn-primary">Ingresar</button>
    </form>

    <div style="text-align: center; margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid #e2e8f0;">
        <p style="color: #64748b; font-size: 0.9rem;">
            ¿No tenés cuenta?
            <a asp-action="Register" style="color: #667eea; text-decoration: none; font-weight: 600;">Registrate</a>
        </p>
    </div>
</div>