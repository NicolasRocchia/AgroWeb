<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AGROCONNECT</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar-custom">
            <div class="container-fluid">
                <div class="navbar-collapse-custom">
                    <a class="navbar-brand-custom" asp-controller="Home" asp-action="Index">
                        <span class="navbar-brand-icon">🌾</span>
                        <span>AGROCONNECT</span>
                    </a>

                    <button class="navbar-toggler" type="button" id="navbarToggler">
                        <div class="hamburger">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                    </button>

                    <ul class="navbar-nav-custom" id="navbarMenu">
                        <li><a class="nav-link-custom" asp-controller="Home" asp-action="Index">Inicio</a></li>
                        <li><a class="nav-link-custom" asp-controller="RecipeView" asp-action="Upload">Subir Receta</a></li>
                        <li><a class="nav-link-custom" asp-controller="RecipeView" asp-action="Index">Consultar</a></li>
                        <li><a class="nav-link-custom" href="/swagger" target="_blank">API Docs</a></li>

                        @if (Context.Request.Cookies.ContainsKey("agro_token"))
                        {
                            var userName = Context.Request.Cookies["agro_user_name"] ?? "Usuario";
                            <li class="user-menu-container">
                                <button class="btn-user-menu" id="userMenuButton">
                                    <span class="user-icon">👤</span>
                                    <span class="user-name">@userName</span>
                                    <span class="dropdown-arrow">▼</span>
                                </button>
                                <div class="user-dropdown" id="userDropdown">
                                    <div class="user-dropdown-header">
                                        <span class="user-icon-large">👤</span>
                                        <div class="user-info">
                                            <strong>@userName</strong>
                                            <small>@Context.Request.Cookies["agro_user_email"]</small>
                                        </div>
                                    </div>
                                    <div class="user-dropdown-divider"></div>
                                    <form method="post" asp-controller="Account" asp-action="Logout">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="user-dropdown-item">
                                            <span class="item-icon">🚪</span>
                                            Cerrar Sesión
                                        </button>
                                    </form>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="btn-login" asp-controller="Account" asp-action="Login">
                                    <span class="login-icon">🔐</span>
                                    Ingresar
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <p>🌾 AGROCONNECT</p>
            <p>Sistema de Gestión de Recetas Fitosanitarias</p>
            <p>© @DateTime.Now.Year - Todos los derechos reservados</p>
        </div>
    </footer>

    <script>
        // Toggle del menú hamburguesa
        document.addEventListener('DOMContentLoaded', function() {
            const toggler = document.getElementById('navbarToggler');
            const menu = document.getElementById('navbarMenu');

            if (toggler && menu) {
                toggler.addEventListener('click', function() {
                    menu.classList.toggle('active');
                    toggler.classList.toggle('active');
                });

                const links = menu.querySelectorAll('.nav-link-custom, .btn-login');
                links.forEach(link => {
                    link.addEventListener('click', function() {
                        menu.classList.remove('active');
                        toggler.classList.remove('active');
                    });
                });

                document.addEventListener('click', function(e) {
                    if (!menu.contains(e.target) && !toggler.contains(e.target)) {
                        menu.classList.remove('active');
                        toggler.classList.remove('active');
                    }
                });
            }

            // Toggle del menú de usuario
            const userMenuButton = document.getElementById('userMenuButton');
            const userDropdown = document.getElementById('userDropdown');

            if (userMenuButton && userDropdown) {
                userMenuButton.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdown.classList.toggle('show');
                });

                // Cerrar dropdown al hacer clic fuera
                document.addEventListener('click', function(e) {
                    if (!userMenuButton.contains(e.target) && !userDropdown.contains(e.target)) {
                        userDropdown.classList.remove('show');
                    }
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>