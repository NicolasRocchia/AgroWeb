@model WebApplication1.Models.Admin.MunicipalitiesViewModel
@{
    ViewData["Title"] = "Gesti√≥n de Municipios";
}

<div class="recipes-header">
    <div class="recipes-header-content">
        <h1 class="recipes-title">
            <span class="recipes-title-icon">üèõÔ∏è</span>
            Gesti√≥n de Municipios
        </h1>
        <p class="recipes-subtitle">Administr√° los municipios que controlan las recetas fitosanitarias</p>
    </div>
</div>

<div class="create-user-container" style="max-width: 1000px;">

    @if (TempData["Success"] != null)
    {
        <div style="background: #ecfdf5; border: 1px solid #6ee7b7; border-radius: 10px; padding: 14px 20px; margin-bottom: 16px; display: flex; align-items: center; gap: 10px; color: #065f46;">
            <span>‚úÖ</span> <span>@TempData["Success"]</span>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert-error">
            <span class="alert-icon">‚ö†Ô∏è</span>
            <div><strong>@TempData["Error"]</strong></div>
        </div>
    }

    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <a asp-action="Users" class="back-link">‚Üê Volver a Usuarios</a>
        <a asp-action="CreateMunicipality" class="btn-submit" style="text-decoration: none; display: inline-flex; align-items: center; gap: 6px;">
            ‚ûï Nuevo Municipio
        </a>
    </div>

    @if (!Model.Municipalities.Any())
    {
        <div style="text-align: center; padding: 60px 20px; color: #94a3b8;">
            <div style="font-size: 48px; margin-bottom: 12px;">üèõÔ∏è</div>
            <p style="font-size: 18px; font-weight: 600;">No hay municipios registrados</p>
            <p>Cre√° el primero para empezar a gestionar el control de recetas.</p>
        </div>
    }
    else
    {
        <div style="display: flex; flex-direction: column; gap: 12px;">
            @foreach (var m in Model.Municipalities)
            {
                <div style="background: white; border: 1px solid #e2e8f0; border-radius: 12px; padding: 16px 20px; display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 12px;">
                    <div style="flex: 1; min-width: 200px;">
                        <div style="font-weight: 700; font-size: 16px; color: #1e293b;">@m.Name</div>
                        <div style="font-size: 13px; color: #64748b; margin-top: 2px;">
                            @if (!string.IsNullOrEmpty(m.Department))
                            {
                                <span>@m.Department</span>
                            }
                            @if (!string.IsNullOrEmpty(m.Province))
                            {
                                <span>‚Äî @m.Province</span>
                            }
                        </div>
                        @if (m.Latitude.HasValue && m.Longitude.HasValue)
                        {
                            <div style="font-size: 12px; color: #94a3b8; margin-top: 2px;">
                                üìç @m.Latitude?.ToString("F5"), @m.Longitude?.ToString("F5")
                            </div>
                        }
                        else
                        {
                            <div style="font-size: 12px; color: #f59e0b; margin-top: 2px;">
                                ‚ö†Ô∏è Sin coordenadas GPS
                            </div>
                        }
                    </div>

                    <div style="min-width: 180px;">
                        @if (m.UserId.HasValue && !string.IsNullOrEmpty(m.UserName))
                        {
                            <span style="background: #d1fae5; color: #065f46; padding: 4px 12px; border-radius: 20px; font-size: 13px; font-weight: 600;">
                                üë§ @m.UserName
                            </span>
                        }
                        else
                        {
                            <span style="background: #fef3c7; color: #92400e; padding: 4px 12px; border-radius: 20px; font-size: 13px; font-weight: 600;">
                                ‚ö†Ô∏è Sin operador
                            </span>
                        }
                    </div>

                    <a asp-action="EditMunicipality" asp-route-id="@m.Id"
                       style="padding: 8px 16px; background: #f1f5f9; color: #475569; border-radius: 8px; text-decoration: none; font-size: 14px; font-weight: 600; transition: all 0.15s;"
                       onmouseover="this.style.background='#e2e8f0'" onmouseout="this.style.background='#f1f5f9'">
                        ‚úèÔ∏è Editar
                    </a>
                </div>
            }
        </div>

        <div style="margin-top: 16px; text-align: center; color: #94a3b8; font-size: 14px;">
            @Model.Municipalities.Count municipio(s) registrado(s)
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/recipes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}
